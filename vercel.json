{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/about", "dest": "/about.html" },
    { "src": "/portfolio", "dest": "/portfolio.html" },
    { "src": "/services", "dest": "/services.html" },
    { "src": "/contact", "dest": "/contact.html" },
    { "src": "/blog", "dest": "/blog.html" },
    { "src": "/blog/(.*)", "dest": "/blog/$1.html" },
    { "src": "/(.*)\.html", "status": 404 },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "github": {
    "enabled": true,
    "silent": false,
    "autoJobCancelation": true,
    "ref": "html-website"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
